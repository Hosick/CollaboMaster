{{>layout/header}}

<h1>Simple Board</h1>
<div class="col-md-12">
    <!--로그인 기능 영역-->
    <div class="row">
        <div class="col-md-6">

            {{#loginUserName}}
                <span id="user">{{loginUserName}}님 안녕하세요</span>
                <a href="/logout" class="btn btn-info active" role="button">로그아웃</a>
            {{/loginUserName}}
            {{^loginUserName}}
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">구글 로그인</a>
                <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">네이버 로그인</a>
            {{/loginUserName}}
        </div>
    </div>


    <!--검색, 작성 영역-->
    <div class="row">
        <div class="col-md-12">
            {{#loginUserName}}
                <span style="float:right">
                    <a href="/post/save" role="button" class="btn btn-primary">글 등록</a>
                </span>
            {{/loginUserName}}
        </div>
    </div>
    <br>
    <!--게시글 출력 영역-->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>글쓴이</th>
            <th>날짜</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a onclick="location.href='/post/update/{{id}}'" style="cursor:hand"
                       onmouseover="this.style.color='red'; this.style.textDecoration='underline'"
                       onmouseout="this.style.color='black'; this.style.textDecoration='none'">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{createdDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}